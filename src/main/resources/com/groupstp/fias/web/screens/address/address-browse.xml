<window xmlns="http://jmix.io/schema/ui/window" xmlns:dynattr="http://jmix.io/schema/dynattr/ui" xmlns:cuba="http://schemas.haulmont.com/cuba/screen/compatibility"
    caption="msg://addressBrowse.caption" focusComponent="table">
    <data>
        <collection id="addressesDc" class="com.groupstp.fias.entity.Address">
            <fetchPlan extends="_local">
                <property name="house" fetchPlan="_minimal" />
                <property name="fiasEntity" fetch="BATCH" fetchPlan="_minimal" />
                <property name="stead" fetchPlan="_minimal" />
            </fetchPlan>
            <loader id="addressesDl">
                <query>
                    <![CDATA[select e from fias_Address e]]>
                </query>
            </loader>
        </collection>
        <instance id="addressDc" class="com.groupstp.fias.entity.Address">
            <fetchPlan extends="_local">
                <property name="house" fetchPlan="parent">
                    <property name="housenum" />
                </property>
                <property fetch="BATCH" name="fiasEntity" fetchPlan="_minimal" />
                <property name="stead" fetchPlan="_minimal" />
            </fetchPlan>
            <loader />
            <collection id="houseDc" property="house" />
            <collection id="fiasEntityDc" property="fiasEntity" />
            <collection id="steadDc" property="stead" />
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER" />
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc" />
    </actions>
    <dialogMode height="600" width="800" />
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <cuba:cubaFilter id="filter" applyTo="table" dataLoader="addressesDl">
                    <properties include=".*" />
                </cuba:cubaFilter>
                <groupTable id="table" width="100%" dataContainer="addressesDc" multiselect="true" presentations="true">
                    <actions>
                        <action id="create" type="create" />
                        <action id="edit" type="edit" />
                        <action id="remove" type="remove" />
                        <action id="refresh" type="refresh" />
                        <action id="excel" type="excelExport" />
                    </actions>
                    <columns>
                        <column id="srcAddress" />
                        <column id="normAddress" />
                    </columns>
                    <simplePagination />
                    <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                        <button id="createBtn" action="table.create" />
                        <button id="editBtn" action="table.edit" />
                        <button id="removeBtn" action="table.remove" />
                        <button id="refreshBtn" action="table.refresh" />
                        <button id="excelBtn" action="table.excel" />
                        <button id="normalizeBtn" caption="msg://normalizeBtn.caption" />
                    </buttonsPanel>
                    <simplePagination autoLoad="true" />
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction" />
                    <button action="lookupCancelAction" />
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="tabSheetBox" spacing="true">
                <vbox id="tabSheetBox" expand="tabSheet">
                    <tabSheet id="tabSheet">
                        <tab id="mainTab" caption="msg://address.editorMainTab.caption" margin="true" expand="fieldGroupBox">
                            <scrollBox id="fieldGroupBox" height="100%">
                                <form id="form" dataContainer="addressDc" width="100%" height="100%">
                                    <column width="100%">
                                        <textField id="srcAddressField" property="srcAddress" />
                                        <textField id="cadastralNumberField" property="cadastralNumber" />
                                        <textArea id="normAddressField" property="normAddress" height="100%" />
                                    </column>
                                </form>
                            </scrollBox>
                        </tab>
                        <tab id='houseTab' caption='msg://com.groupstp.fias.entity/Address.house' margin='true,false,false,false'>
                            <table id="houseTable" dataContainer="houseDc" width="100%" height="100%">
                                <actions>
                                    <action id="add" type="add" />
                                    <action id="exclude" type="exclude" />
                                </actions>
                                <columns>
                                    <column id="garId" />
                                    <column id="parentAdm" />
                                    <column id="parentMun" />
                                    <column id="housenum" />
                                    <column id="buildnum" />
                                    <column id="strucnum" />
                                    <column id="isactive" />
                                    <column id="isactual" />
                                </columns>
                                <buttonsPanel>
                                    <button action="houseTable.add" />
                                    <button action="houseTable.exclude" />
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='steadTab' caption='msg://com.groupstp.fias.entity/Address.stead' margin='true,false,false,false'>
                            <table id="steadTable" dataContainer="steadDc" width="100%" height="100%">
                                <actions>
                                    <action id="add" type="add" />
                                    <action id="exclude" type="exclude" />
                                </actions>
                                <columns>
                                    <column id="number" />
                                </columns>
                                <buttonsPanel>
                                    <button action="steadTable.add" />
                                    <button action="steadTable.exclude" />
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='fiasEntityTab' caption='msg://com.groupstp.fias.entity/Address.fiasEntity' margin='true,false,false,false'>
                            <table id="fiasEntityTable" dataContainer="fiasEntityDc" width="100%" height="200px">
                                <actions>
                                    <action id="add" type="add" />
                                    <action id="exclude" type="exclude" />
                                </actions>
                                <columns>
                                    <column id="shortname" />
                                    <column id="name" />
                                </columns>
                                <buttonsPanel>
                                    <button action="fiasEntityTable.add" />
                                    <button action="fiasEntityTable.exclude" />
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save" />
                    <button id="cancelBtn" action="cancel" />
                </hbox>
            </vbox>
        </split>
    </layout>
    <facets>
        <dynattr:dynamicAttributes />
    </facets>
</window>
